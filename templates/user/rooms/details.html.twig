{% extends "part/_user_dashboard_page_cards.html.twig" %}


{% block user_page_title %}Détails de {{ room }}{% endblock %}
{% block user_cards %}
<div class="card bg-warning col-6 text-primary">
    <div class="card-body">
        <h5 class="mb-3 card-title">
            Informations
        </h5>
        <table class="table text-primary">
            <tr>
                <td>Adresse</td>
                <td> {{ room.address }} </td>
            </tr>
            <tr>
                <td>Commentaire</td>
                <td> {{ room.comment }} </td>
            </tr>
            <tr>
                <td>Couleur</td>
                <td style="color: {{ room.color }};"> {{ room.color }} </td>
            </tr>
            <tr>
                <td>Réservable uniquement avec un compte utilisateur</td>
                <td> {{ room.registeredReservationsOnly == false ? 'Non' : 'Oui' }} </td>
            </tr>
        </table>
    </div>
</div>

<div class="card bg-warning col-5 text-primary">
    <div class="card-body">
        <h5 class="mb-3 card-title">
            Calendriers liés à {{ room }}
        </h5>
        <table class="table">
            {% for calendar in calendars %}
            <tr>
                <td><a class="text-light text-decoration-none"
                        href="{{ path('app_calendar_view', {'id': calendar.id}) }}">{{ calendar.name }}</a>
                </td>
                <td class="text-primary">{{ calendar.isNative ? 'Natif' : ''}}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>

<div class="card bg-warning col-12 mt-5">
    <div class="card-body">
        <h5 class="mb-3 card-title text-primary">
            Réservations
        </h5>
        <div class="accordion" id="accordionReservations">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Réservations à venir
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                    aria-expanded="true" data-bs-parent="#accordionReservations">
                    <div class="accordion-body">
                        <table class="table table-striped table-warning text-primary">
                            {% for reservation in reservations %}
                            {% if date(reservation.endsAt) >= date() %}
                            <tr>
                                <td>{{ reservation.name }}</td>
                                <td>{{ reservation.applicant != null ? reservation.applicant : reservation.applicantName
                                    }}</td>
                                <td>{{ reservation.startsAt|date('d-m-Y H:s') }}</td>
                                <td>{{ reservation.endsAt|date('d-m-Y H:s') }}</td>
                                <td>{{ reservation.comment }}</td>
                            </tr>
                            {% endif %}
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseTwo" aria-controls="collapseTwo">
                        Réservations passées
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingOne"
                    data-bs-parent="#accordionReservations">
                    <div class="accordion-body">
                        <table class="table table table-striped table-warning text-primary">
                            {% for reservation in reservations %}
                            {% if date(reservation.endsAt) < date() %} <tr>
                                <td>{{ reservation.name }}</td>
                                <td>{{ reservation.applicant != null ? reservation.applicant : reservation.applicantName
                                    }}</td>
                                <td>{{ reservation.startsAt|date('d-m-Y H:s') }}</td>
                                <td>{{ reservation.endsAt|date('d-m-Y H:s') }}</td>
                                <td>{{ reservation.comment }}</td>
                                </tr>
                                {% endif %}
                                {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}